{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "testName": {
            "type": "string",
            "minLength": 1
        },
        "testSKU": {
            "type": "string",
            "allowedValues": [
                "Free",
                "Shared",
                "Basic",
                "Standard"
            ],
            "defaultValue": "Free"
        },
        "testWorkerSize": {
            "type": "string",
            "allowedValues": [
                "0",
                "1",
                "2"
            ],
            "defaultValue": "0"
        },
        "linuxFxVersion": {
            "type": "string",
            "defaultValue": "PYTHON|3.7",
            "metadata": {
                "description": "The Runtime stack of current web app"
            }
        }
    },
    "variables": {
        "testName": "[concat('web-app', uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2015-08-01",
            "name": "[variables('testName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('testName'))]"
            ],
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('testName'))]": "Resource",
                "displayName": "test"
            },
            "properties": {
                "name": "[variables('testName')]",
                "siteConfig": {
                    "linuxFxVersion": "[parameters('linuxFxVersion')]"
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', parameters('testName'))]"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2014-06-01",
            "name": "[parameters('testName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "tags": {
                "displayName": "test"
            },
            "properties": {
                "name": "[parameters('testName')]",
                "sku": "[parameters('testSKU')]",
                "workerSize": "[parameters('testWorkerSize')]",
                "numberOfWorkers": 1
            }
        }
    ]
}
